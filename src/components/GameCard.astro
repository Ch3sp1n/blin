---
const { titulo, thumb, categoria, id } = Astro.props;
---

<div class="card-wrapper">
  <a href={`/game/${id}`} class="card-link">
    <div class="card">
      
      <div class="image-frame">
        <img 
          src={thumb} 
          alt={titulo} 
          onerror="this.style.display='none'" 
        />
      </div>
  
      <div class="info">
        <h3>{titulo}</h3>
        <span>{categoria}</span>
      </div>
    </div>
  </a>

  <button class="heart-btn" data-id={id} title="Adicionar aos Favoritos">
    <span class="heart-icon">♥</span>
  </button>
</div>

<style>
  .card-wrapper {
    position: relative;
  }

  .card-link {
    text-decoration: none;
    display: block;
  }

  .card {
    background: rgba(26, 26, 26, 0.9); /* Ligeiramente transparente */
    border-radius: 16px; /* Cantos mais redondos */
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); /* Animação elástica */
    border: 1px solid #333;
    position: relative;
    z-index: 1;
  }

  .card:hover {
    transform: translateY(-10px) scale(1.02);
    border-color: #ff0055;
    box-shadow: 0 15px 30px rgba(255, 0, 85, 0.2);
  }

  .image-frame {
    width: 100%;
    aspect-ratio: 16/9;
    background: #222;
    overflow: hidden;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .card:hover img {
    transform: scale(1.1); /* Zoom na imagem ao passar o rato */
  }

  .info {
    padding: 15px;
    background: linear-gradient(to bottom, #1a1a1a, #0d0d0d);
  }

  h3 {
    margin: 0;
    color: white;
    font-size: 1.1rem;
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  span {
    color: #ff0055; /* Categoria a rosa */
    font-size: 0.75rem;
    font-weight: bold;
    text-transform: uppercase;
    margin-top: 6px;
    display: inline-block;
    border: 1px solid #ff0055;
    padding: 2px 8px;
    border-radius: 4px;
  }

  /* --- O NOVO BOTÃO DE CORAÇÃO --- */
  .heart-btn {
    position: absolute;
    top: 12px;
    right: 12px;
    z-index: 10;
    
    /* Estilo Vidro (Glassmorphism) */
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    
    width: 42px;
    height: 42px;
    border-radius: 50%;
    cursor: pointer;
    
    display: flex;
    align-items: center;
    justify-content: center;
    
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0,0,0,0.3);
  }

  .heart-icon {
    font-size: 1.4rem;
    color: white;
    transition: transform 0.2s;
    line-height: 1;
    margin-top: 2px; /* Pequeno ajuste visual */
  }

  /* Hover (Passar o rato) */
  .heart-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.1);
  }

  .heart-btn:active {
    transform: scale(0.95); /* Efeito de clique */
  }

  /* ESTADO LIKED (Quando é favorito) */
  .heart-btn.liked {
    background: #ff0055;
    border-color: #ff0055;
    box-shadow: 0 0 15px rgba(255, 0, 85, 0.6);
    animation: pop 0.4s ease; /* Efeito de "Pop" */
  }

  .heart-btn.liked .heart-icon {
    color: white;
  }

  /* Animação de explosãozinha ao clicar */
  @keyframes pop {
    0% { transform: scale(1); }
    50% { transform: scale(1.3); }
    100% { transform: scale(1); }
  }
</style>