---
import jogos from '../../data/jogos.json';

export function getStaticPaths() {
  return jogos.map((jogo) => ({
    params: { id: jogo.id.toString() },
    props: { jogo },
  }));
}

const { jogo } = Astro.props;
---

<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{jogo.titulo} | Jogar Agora</title>
  </head>
  <body>
    
    <nav>
      <a href="/" class="back-btn">‚¨Ö Voltar</a>
      <h1>{jogo.titulo}</h1>
    </nav>

    <main class="main-container">
      
      <div class="game-wrapper" id="gameArea">
        <iframe 
          src={jogo.url} 
          title={jogo.titulo}
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share; fullscreen"
          allowfullscreen
        ></iframe>
      </div>

      <div class="controls-bar">
        <div class="info">
          <span class="category-tag">{jogo.categoria}</span>
          <span>Dica: Usa o bot√£o ao lado para jogar em grande! üëâ</span>
        </div>
        
        <button id="fullscreenBtn" class="fs-btn">
          ‚õ∂ Ecr√£ Cheio
        </button>
      </div>

    </main>

    <script>
      const btn = document.getElementById('fullscreenBtn');
      const gameArea = document.getElementById('gameArea');

      btn.addEventListener('click', () => {
        if (!document.fullscreenElement) {
          // Entrar em Ecr√£ Cheio
          gameArea.requestFullscreen().catch(err => {
            alert(`Erro ao tentar entrar em ecr√£ cheio: ${err.message}`);
          });
        } else {
          // Sair do Ecr√£ Cheio
          document.exitFullscreen();
        }
      });
    </script>

  </body>
</html>

<style>
  /* 1. FUNDO E ESTRUTURA */
  :global(body), :global(html) {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    background-color: #050505; /* Fundo preto suave */
    font-family: system-ui, sans-serif;
    color: white;
  }

  /* 2. BARRA DE TOPO */
  nav {
    height: 60px;
    background: #111;
    border-bottom: 1px solid #222;
    display: flex;
    align-items: center;
    padding: 0 20px;
    gap: 20px;
  }

  .back-btn {
    color: #aaa;
    text-decoration: none;
    font-weight: bold;
    font-size: 0.9rem;
    padding: 8px 16px;
    background: #222;
    border-radius: 20px;
    transition: 0.3s;
  }
  
  .back-btn:hover {
    background: #ff0055;
    color: white;
  }

  h1 {
    font-size: 1.1rem;
    margin: 0;
    color: white;
  }

  /* 3. CENTRO DA P√ÅGINA */
  .main-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px;
    height: calc(100vh - 60px); /* Altura total menos a barra */
    box-sizing: border-box;
  }

  /* 4. A MOLDURA DO JOGO (MODO CINEMA) */
  .game-wrapper {
    width: 100%;
    max-width: 1000px; /* Tamanho m√°ximo bonito */
    aspect-ratio: 16/9; /* Formato de TV padr√£o */
    background: black;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 0 40px rgba(255, 0, 85, 0.1); /* Brilho suave atr√°s */
    border: 1px solid #333;
    position: relative; /* Necess√°rio para o fullscreen funcionar bem */
  }

 <iframe 
  src="https://html5.gamedistribution.com/393710775d71485680190538059048a1/?gd_sdk_referrer_url=https://blin-pied.vercel.app" 
  width="100%" 
  height="600" 
  scrolling="none" 
  frameborder="0" 
  allow="autoplay; fullscreen; encrypted-media"
  title="Game Title"
></iframe>

  /* 5. BARRA DE CONTROLOS (EM BAIXO) */
  .controls-bar {
    width: 100%;
    max-width: 1000px;
    margin-top: 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #111;
    padding: 10px 20px;
    border-radius: 10px;
    border: 1px solid #222;
    box-sizing: border-box;
  }

  .info {
    display: flex;
    align-items: center;
    gap: 15px;
    font-size: 0.9rem;
    color: #888;
  }

  .category-tag {
    color: #ff0055;
    border: 1px solid #ff0055;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    text-transform: uppercase;
    font-weight: bold;
  }

  /* BOT√ÉO DE ECR√É CHEIO */
  .fs-btn {
    background: #fff;
    color: #000;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    cursor: pointer;
    font-weight: bold;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: 0.2s;
  }

  .fs-btn:hover {
    background: #ff0055;
    color: white;
    box-shadow: 0 0 15px rgba(255, 0, 85, 0.5);
  }

  /* Ajustes para telem√≥veis */
  @media (max-width: 600px) {
    .main-container { padding: 10px; justify-content: start; }
    .game-wrapper { width: 100%; aspect-ratio: auto; height: 60vh; }
    .info span { display: none; } /* Esconde o texto da dica em ecr√£s pequenos */
  }
</style>